<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	String rememberMe="";

	Cookie[] arr=request.getCookies(); //아이디기록용 쿠기 가져와
	if(arr!=null){
		for(Cookie c:arr){
			
			if(c.getName().equals("rememnerMe")){
				rememberMe=c.getValue();
			}
		}
	}		
%>  
    
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>

	<!-- 
	로그인에 성공하면 "아이디기록용" 쿠키를 하나 생성
	
	이 페이지에 진입할 떄, "아이디기록용" 쿠키가 있다면, 
	input태그에 쿠키값을 미리 찍어주면 됩니다. 
	 -->
	<form action="cookie_ex01_result.jsp">
	
		<input type="text" name="id" placeholder="아이디" value=<%=ans %>><br>		
		<input type="password" name="pw" placeholder="패스워드"><br>
		<input type="submit" value="쿠키로그인"><br>
		<input type="checkbox" name="idcheck" value="yes">아이디기억하기<br>
				
	</form>


</body>
</html>